{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn --worker-class gevent --workers 2 --threads 4 --bind 0.0.0.0:$PORT app:app"
  },
  "mounts": {
    "data": {
      "mountPath": "/uploads",
      "sizeGB": 5
    }
  },
  "variables": {
    "STORAGE_PATH": "/uploads",
    "PYTHONUNBUFFERED": "1"
  }
}